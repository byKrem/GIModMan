<UserControl x:Class="GIModMan.MVVM.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GIModMan.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <RadioButton Content="Общее" MinHeight="25" Margin="5"
                         Style="{StaticResource MenuRadioButtonTheme}" Background="AliceBlue"/>
            <RadioButton Content="Отображение" MinHeight="25" Margin="5"
                         Style="{StaticResource MenuRadioButtonTheme}" Background="AliceBlue"/>
        </StackPanel>
    </Grid>
</UserControl>
